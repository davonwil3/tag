generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  relationMode  = "prisma"
}

/// This model contains row level security and requires additional setup for migrations. Visit https://pris.ly/d/row-level-security for more info.
model rule {
  id             String   @id(map: "Rule_pkey")
  name           String
  appliesTo      String
  condition      String
  conditionValue String
  tag            String
  shop           String
  createdAt      DateTime @default(now())
  updatedAt      DateTime
  isActive       Boolean  @default(true)

  @@index([appliesTo], map: "Rule_appliesTo_idx")
  @@index([shop], map: "Rule_shop_idx")
}

/// This model contains row level security and requires additional setup for migrations. Visit https://pris.ly/d/row-level-security for more info.
model session {
  id            String    @id(map: "Session_pkey")
  shop          String
  state         String
  isOnline      Boolean   @default(false)
  scope         String?
  expires       DateTime?
  accessToken   String
  userId        BigInt?
  firstName     String?
  lastName      String?
  email         String?
  accountOwner  Boolean   @default(false)
  locale        String?
  collaborator  Boolean?  @default(false)
  emailVerified Boolean?  @default(false)
}

/// Track when tags are applied to orders, customers, or products
model tagActivity {
  id          String   @id @default(cuid())
  shop        String
  entityType  String   // "Order", "Customer", "Product"
  entityId    String   // Shopify ID of the entity
  tag         String   // The tag that was applied
  ruleId      String?  // ID of the rule that triggered this (optional)
  appliedAt   DateTime @default(now())
  
  @@index([shop])
  @@index([entityType])
  @@index([tag])
  @@index([appliedAt])
}

/// Track tag usage statistics
model tagUsage {
  id        String   @id @default(cuid())
  shop      String
  tag       String
  count     Int      @default(0)
  lastUsed  DateTime @default(now())
  
  @@unique([shop, tag])
  @@index([shop])
  @@index([tag])
}
